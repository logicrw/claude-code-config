[mcp_servers]

[mcp_servers.serena]
command = "uvx"
args = [ "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "ide-assistant" ]

[mcp_servers.ripgrep]
command = "npx"
args = [ "-y", "mcp-ripgrep" ]

[mcp_servers.ctx]
command = "ctx"
args = [ "server" ]

[mcp_servers.tree-sitter]
command = "uvx"
args = [ "mcp-server-tree-sitter" ]

[mcp_servers.semgrep]
command = "semgrep"
args = [ "mcp" ]

[mcp_servers.repomapper]
command = "uvx"
args = [ "--from", "git+https://github.com/pdavis68/RepoMapper.git", "repomap-mcp" ]

[mcp_servers.exa]
command = "npx"
args = [ "-y", "@smithery/cli@latest", "run", "exa", "--key", "YOUR_EXA_API_KEY_HERE" ]

[mcp_servers.mcp-debugger]
command = "node"
args = [
  "/path/to/mcp-debugger/dist/index.js",
  "--log-level", "info",
  "--log-file", "/path/to/mcp-debugger/debug-mcp-server.log"
]
