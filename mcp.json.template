{
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant"
      ]
    },
    "basic-memory": {
      "command": "uvx",
      "args": [
        "basic-memory",
        "mcp"
      ]
    },
    "ripgrep": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-ripgrep"
      ]
    },
    "ctx": {
      "command": "ctx",
      "args": [
        "server"
      ]
    },
    "tree-sitter": {
      "command": "uvx",
      "args": [
        "mcp-server-tree-sitter"
      ]
    },
    "semgrep": {
      "command": "uvx",
      "args": [
        "semgrep-mcp"
      ]
    },
    "repomapper": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/pdavis68/RepoMapper.git",
        "repomap-mcp"
      ]
    },
    "exa": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "exa",
        "--key",
        "YOUR_EXA_API_KEY_HERE"
      ]
    },
    "mcp-debugger": {
      "command": "node",
      "args": [
        "/path/to/mcp-debugger/dist/index.js",
        "--log-level",
        "info",
        "--log-file",
        "/path/to/mcp-debugger/debug-mcp-server.log"
      ]
    }
  }
}
